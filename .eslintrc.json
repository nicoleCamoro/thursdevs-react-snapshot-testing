{
    "plugins": ["prettier", "react", "react-native", "jsx-a11y", "import"],
    "extends": ["airbnb", "prettier", "prettier/react"],
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 100,
                "useTabs": false,
                "tabWidth": 2,
                "singleQuote": true,
                "semi": true,
                "trailingComma": "all",
                "jsxBracketSameLine": false,
                "bracketSpacing": true,
                "arrowParens": "avoid"
            }
        ],
        "no-use-before-define": 0,
        "import/no-unresolved": [
            2,
            {
                "ignore": [".png$", ".webp$", ".jpg$", "ViewPropTypes"]
            }
        ],
        "no-console": 0,
        "react/jsx-filename-extension": [
            0,
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "no-underscore-dangle": 0,
        "react/prefer-stateless-function": 0,
        "react/forbid-prop-types": [
            0,
            {
                "forbid": []
            }
        ],
        "react/prop-types": 0,
        "import/extensions": [
            1,
            "never",
            {
                "svg": "always"
            }
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true,
                "optionalDependencies": false,
                "peerDependencies": false
            }
        ],
        "global-require": "off",
        "class-methods-use-this": [
            "error",
            {
                "exceptMethods": [
                    "render",
                    "getInitialState",
                    "getDefaultProps",
                    "getChildContext",
                    "componentWillMount",
                    "componentDidMount",
                    "componentWillReceiveProps",
                    "shouldComponentUpdate",
                    "componentWillUpdate",
                    "componentDidUpdate",
                    "componentWillUnmount",
                    "componentDidCatch"
                ]
            }
        ]
    },
    "parser": "babel-eslint",
    "globals": {
        "fetch": false,
        "FormData": false
    }
}
